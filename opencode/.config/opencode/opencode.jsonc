{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "small_model": "amazon-bedrock/global.anthropic.claude-sonnet-4-5-20250929-v1:0",
  "plugin": [
    "oh-my-opencode",
    "opencode-openai-codex-auth"
  ],
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ty": {
      "command": ["ty", "server"],
      "extensions": [".py", ".pyi"]
    },
    "ruff": {
      "command": ["ruff", "server"],
      "extensions": [".py", ".pyi"]
    }
  },
  "formatter": {
    "ruff": {
      "command": ["ruff", "format", "$FILE"],
      "extensions": [".py", ".pyi"]
    },
    "ruff_organize_imports": {
      "command": ["ruff", "check", "--select", "I", "--fix-only", "$FILE"],
      "extensions": [".py", ".pyi"]
    }
  },
}
